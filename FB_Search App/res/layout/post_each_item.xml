<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/post_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        />
    <TextView

        android:id="@+id/post_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:layout_weight="0.05"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/post_photo"
        android:layout_toEndOf="@+id/post_photo"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />
    <TextView

        android:id="@+id/post_time"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:orientation="vertical"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/post_name"
        android:layout_alignLeft="@+id/post_name"
        android:layout_alignStart="@+id/post_name" />
    <TextView
        android:layout_marginTop="24dp"
        android:id="@+id/post_msg"
        android:layout_width="240dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_weight="0.05"
        android:layout_below="@+id/post_name"
        android:layout_alignLeft="@+id/post_time"
        android:layout_alignStart="@+id/post_time" />





</RelativeLayout>